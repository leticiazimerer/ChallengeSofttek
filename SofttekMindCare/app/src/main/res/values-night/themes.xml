<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.SofttekMindCare" parent="Theme.SofttekMindCare">
        <!-- Dark mode specific overrides -->
        <item name="android:windowBackground">@color/softtek_dark</item>
        <item name="android:colorBackground">@color/softtek_dark</item>

        <!-- Text colors for dark mode -->
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/softtek_light_blue</item>

        <!-- Card background for dark mode -->
        <item name="cardViewStyle">@style/CardView.SofttekMindCare.Dark</item>
    </style>

    <!-- Dark mode CardView -->
    <style name="CardView.SofttekMindCare.Dark" parent="CardView.SofttekMindCare">
        <item name="cardBackgroundColor">@color/softtek_dark</item>
        <item name="cardElevation">8dp</item>
    </style>
</resources>