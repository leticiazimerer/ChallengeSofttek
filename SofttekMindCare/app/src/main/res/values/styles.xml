<resources>
    <!-- Base application theme -->
    <style name="Theme.SofttekMindCare" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/softtek_blue</item>
        <item name="colorPrimaryVariant">@color/softtek_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/softtek_green</item>
        <item name="colorSecondaryVariant">@color/softtek_light_blue</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>

    <!-- Widget styles -->
    <style name="CardStyle" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>

    <style name="ButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/softtek_blue</item>
        <item name="cornerRadius">8dp</item>
    </style>

    <style name="ToolbarTitle" parent="TextAppearance.AppCompat.Title">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/white</item>
    </style>
</resources>